<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;netstandard2.1;</TargetFrameworks>
    <LangVersion>7.2</LangVersion>
    <Version>1.3.0</Version>
    <FileVersion>1.3.0.0</FileVersion>
    <Copyright>2019©CleanCode-Labs</Copyright>
    <Authors>Sami Al Khatib</Authors>
    <Title>Serilog with Microsoft logging and Autofac</Title>
    <Description>An extension for Autofac-IoC to use Serilog and Microsoft's logging abstractions with ease.</Description>
    <PackageProjectUrl>https://github.com/cleancodelabs/Serilog.Extensions.Autofac.DependencyInjection</PackageProjectUrl>
    <PackageTags>Serilog, Microsoft, Logging, Extensions, Autofac, IoC</PackageTags>
    <PackageIconUrl>https://raw.githubusercontent.com/cleancodelabs/Serilog.Extensions.Autofac.DependencyInjection/master/assets/nuget-icon.png</PackageIconUrl>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>git://github.com/cleancodelabs/Serilog.Extensions.Autofac.DependencyInjection</RepositoryUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <PackageReference Include="Microsoft.Extensions.Logging" Version="2.2.0" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.1'">
    <PackageReference Include="Microsoft.Extensions.Logging" Version="3.0.0" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Serilog" Version="2.8.0" />
    <PackageReference Include="Serilog.Extensions.Logging" Version="3.0.1" />
    <PackageReference Include="Serilog.Sinks.RollingFile" Version="3.3.0" />
    <PackageReference Include="Serilog.Sinks.Console" Version="3.1.1" />
    <PackageReference Include="Autofac" Version="4.9.2" />
  </ItemGroup>

</Project>
